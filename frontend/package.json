{
  "name": "scientific-calculator-frontend",
  "version": "0.1.0",
  "description": "Frontend UI for scientific calculator with unit conversions",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:a11y": "jest --config jest.a11y.config.cjs",
    "lint": "eslint src tests --ext .js,.jsx",
    "lint:fix": "eslint src tests --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,css,html}\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,css,html}\" \"tests/**/*.js\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.0",
    "@testing-library/user-event": "^14.4.0",
    "@vitejs/plugin-vue": "^4.4.0",
    "@vitest/ui": "^0.34.0",
    "axe-core": "^4.8.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0",
    "vite": "^4.5.0",
    "vitest": "^0.34.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
